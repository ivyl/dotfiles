[core]
	editor = nvim

[color]
	ui = true

[push]
	default = simple

[alias]
	aa  = add -A
	br  = branch
	cm  = commit
	co  = checkout
	chp = cherry-pick
	dt  = difftool
	df  = diff
	dfc = diff --cached
	fe  = fetch
	me  = merge
	mt  = mergetool
	st  = status -sb
	r   = remote -v

	pulla = pull
	puff = pull --ff-only
	purr = pull --rebase
	root = rev-parse --show-toplevel

	ours    = checkout --ours
	theirs  = checkout --theirs

	gud = bisect good
	bad = bisect bad

	unstage = reset HEAD

	cite = log -1 --abbrev=12 --format='%h (\"%s\")'

	l = log --graph --all --format=format:'%C(bold blue)%h%C(reset)\
		- %C(bold green)(%ar)%C(reset) %C(bold red)%d%C(reset)\
		%C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)'\
		--abbrev-commit --date=relative

[merge]
	tool = nvimdiff

[mergetool]
	prompt = true

[difftool]
	prompt = true

[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[mergetool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\""

[diff]
	algorithm = patience
